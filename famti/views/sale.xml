<odoo>
    <record id="view_sale_order_hide_draft_confirm_famti" model="ir.ui.view">
        <field name="name">sale.order.form.hide.draft.confirm.famti</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header/button[@name='action_confirm' and not(@id)]"
                   position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//form/header/button[@name='action_draft' and not(@id)]"
                   position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="readonly">state != 'draft'</attribute>
            </xpath>

            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="readonly">state != 'draft'</attribute>
            </xpath>

            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="readonly">state != 'draft'</attribute>
            </xpath>

            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="readonly">state != 'draft'</attribute>
            </xpath>

            <xpath expr="//field[@name='validity_date']" position="attributes">
                <attribute name="readonly">state != 'draft'</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="readonly">state != 'draft'</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>
    
    <record id="view_sale_order_form_famti_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.famti</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_preview_sale_order']" position="before">
                <button name="action_cfo_approval"
                    type="object"
                    string="Submit for CFO Approval"
                    class="btn-primary"
                    groups="famti.group_sales_dep_users"
                    invisible="state != 'draft'"
                />
                <button name="action_approve"
                    type="object"
                    string="Approve"
                    class="btn-primary"
                    groups="famti.group_cheif_financial_officer"
                    invisible="state != 'to_approve'"
                />
                <button name="action_reject"
                    type="object"
                    string="Reject"
                    class="btn-secondary"
                    groups="famti.group_cheif_financial_officer"
                    invisible="state != 'to_approve'"
                />
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <group col="2" string="Customer Credit Info">
                    <field name="partner_credit_limit" readonly="1"/>
                    <field name="partner_outstanding" readonly="1"/>
                    <field name="partner_lc_document"/>
                </group>
                    <field name="customer_email"/>
                    <field name="customer_phone"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="customer_email"/>
                <field name="customer_phone"/>
            </xpath>
             <xpath expr="//field[@name='date_order']" position="before">
                <field name="so_type"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/list/field[@name='product_template_id']" position="after">
                <field name="description"/>
                <field name="treatment_in"/>
                <field name="treatment_out"/>
                <field name="remarks"/>
                <field name="thickness_val"/>
                <field name="thickness_uom"/>
                <field name="width_val"/>
                <field name="width_uom"/>
                <field name="core_id"/>
                <field name="pieces"/>
                <field name="length_val"/>
                <field name="length_uom"/>
            </xpath>
            
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="after">
                <field name="mo_price"/>
            </xpath>

            <xpath expr="//page[@name='order_lines']" position="after">
                <page string="MO Valuation">

                    <field name="valuation_line_ids">
                        <list editable="bottom">
                            <field name="date"/>
                            <field name="reference"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="unit_cost"/>
                            <field name="total_cost"/>
                        </list>
                    </field>

                </page>
            </xpath>

            <xpath expr="//div[@name='so_button_below_order_lines']" position="inside">
                    <button name="action_view_manufacturing_cost"
                        type="object"
                        string="Manufacturing Cost"
                    />
            </xpath>

            <!-- <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_mo"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-industry">

                    <field name="mo_count"
                        widget="statinfo"
                        string="Manufacturing Orders"/>

                </button>
            </xpath> -->

            
        </field>
    </record>
</odoo>
