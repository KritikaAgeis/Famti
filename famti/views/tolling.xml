                    [('is_supplier','=',0)] if is_tolling else [('is_supplier','!=',0)]</attribute>
                </xpath> -->

                <xpath expr="//field[@name='vendor_vat']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='vendor_vat']" position="after">
                    <field name="vendor_vat"
                        string="Vendor VAT"
                        invisible="is_tolling"/>

                    <field name="vendor_vat"
                        string="Customer VAT"
                        invisible="not is_tolling"/>
                </xpath>


                <xpath expr="//field[@name='partner_ref']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="partner_ref"
                        string="Vendor Reference"
                        invisible="is_tolling"/>

                    <field name="partner_ref"
                        string="Customer Reference"
                        invisible="not is_tolling"/>
                </xpath>

            </field>
        </record>


        <record id="view_purchase_order_tree_tolling" model="ir.ui.view">
            <field name="name">purchase.order.tree.tolling</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="string">Customer</attribute>
                </xpath>

            </field>
        </record>


        <record id="action_tolling_orders" model="ir.actions.act_window">
            <field name="name">Tolling Orders</field>
            <field name="res_model">purchase.order</field>
            <field name="view_mode">kanban,list,form</field>

            <!-- IMPORTANT -->
            <field name="views" eval="[
                (ref('view_purchase_order_tree_tolling'), 'list'),
                (ref('view_purchase_order_form_tolling'), 'form')
            ]"/>

            <field name="domain">[('is_tolling','=',True)]</field>

            <field name="context">
                {'default_is_tolling': True}
            </field>
        </record>

