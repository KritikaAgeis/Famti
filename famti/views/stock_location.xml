<odoo>
    <record id="view_stock_location_form_serial_prefix" model="ir.ui.view">
        <field name="name">stock.location.form.serial.prefix</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='additional_info']/field[@name='usage']" position="before">
                <field name="serial_prefix" placeholder="RM, QC, SF, FG"/>
            </xpath>
        </field>
    </record>
</odoo>
