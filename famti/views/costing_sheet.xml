<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_costing_sheet_list" model="ir.ui.view">
        <field name="name">costing.sheet.list</field>
        <field name="model">costing.sheet</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="customer_id"/>
 
            </list>
        </field>
    </record>

    <record id="view_costing_sheet_form" model="ir.ui.view">
        <field name="name">costing.sheet.form</field>
        <field name="model">costing.sheet</field>
        <field name="arch" type="xml">
            <form string="Costing Sheet">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="customer_id"/>
                        </group>
                        <group>

                        </group>
                    </group>

                    <group>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_costing_sheet" model="ir.actions.act_window">
        <field name="name">Costing Sheet</field>
        <field name="res_model">costing.sheet</field>
        <field name="view_mode">list,form</field>
    </record>


    <record id="action_open_bom_form" model="ir.actions.act_window">
        <field name="name">Bill of Materials</field>
        <field name="res_model">mrp.bom</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="mrp.mrp_bom_tree_view"/>
        <field name="target">current</field>
    </record>

    <menuitem
        id="menu_bom_costing_sheet"
        name="Costing Sheet"
        parent="sale.sale_order_menu"
        action="action_open_bom_form"
        sequence="50"/>

</odoo>