<odoo>
    <data>
          <record model="ir.module.category" id="module_category_famti_users">
               <field name="name">FAMTI Users</field>
                <field name="sequence">5</field>
            </record>

            <record id="group_cheif_financial_officer" model="res.groups">
                <field name="name">CFO</field>
                <field name="category_id" ref="famti.module_category_famti_users"/>
            </record>

            <record id="group_purchase_dep_users" model="res.groups">
                <field name="name">Purchase Users</field>
                <field name="category_id" ref="famti.module_category_famti_users"/>
            </record>

           <record id="group_sales_dep_users" model="res.groups">
                <field name="name">Sales User</field>
                <field name="category_id" ref="famti.module_category_famti_users"/>
            </record>


        <!-- Purchase Order: User sees only own records -->
        <record id="purchase_order_own_records_rule" model="ir.rule">
            <field name="name">Famti Purchase Order: Own Documents Only</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('famti.group_purchase_dep_users'))]"/>
        </record>

    </data>
</odoo>