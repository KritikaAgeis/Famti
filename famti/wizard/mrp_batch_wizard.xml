<odoo>
    <record id="view_mrp_batch_produce_form_inherit" model="ir.ui.view">
        <field name="name">mrp.batch.produce.form.inherit</field>
        <field name="model">mrp.batch.produce</field>
        <field name="inherit_id" ref="mrp.view_mrp_batch_produce_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='lot_name']" position="after">
                <field name="sn_quantity"/>
                <field name="sn_recived_quantity"/>
            </xpath>
            
            <xpath expr="//footer/button[@name='action_done']" position="after">
                <button name="action_produce_lots"
                        string="Generate Lots"
                        type="object"
                        class="btn-primary"/>
            </xpath>

            <xpath expr="//field[@name='production_text_help']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='production_text']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[field[@name='component_separator']]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//group[field[@name='lots_separator']]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            
            <xpath expr="//button[@name='action_prepare']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//button[@name='action_done']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='production_text']" position="after">
                <group>
                    <field name="line_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="serial_number"/>
                            <field name="location_id"/>
                            <field name="thickness"/>
                            <field name="thickness_uom"/>
                            <field name="width"/>
                            <field name="width_uom"/>
                            <field name="core_id"/>
                            <field name="length"/>
                            <field name="length_uom"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                            <field name="scrap"/>
                            <field name="grade_type"/>
                            <field name="scrap_reason_tag_ids" widget="many2many_tags"/>
                        </list>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
