<odoo>
    <record id="view_stock_lot_wizard_form" model="ir.ui.view">
        <field name="name">stock.lot.wizard.form</field>
        <field name="model">stock.lot.wizard</field>
        <field name="arch" type="xml">
            <form string="Stock Lot Wizard">
                <group>
                    <group>
                    <field name="lot_ids" widget="many2many_tags"/>
                    <field name="location_id"/>
                    <field name="dest_location_id"/>
                </group>
                 <group>
                    <field name="partner_id"/>
                    <field name="note"/>
                </group>
                </group>

                <footer>
                    <button string="Confirm"
                            type="object"
                            name="action_confirm"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


     <record id="view_coa_failed_wizard_form" model="ir.ui.view">
        <field name="name">coa.failed.wizard.form</field>
        <field name="model">coa.failed.wizard</field>
        <field name="arch" type="xml">
            <form string="COA FAILED">
                <group>
                    <group>
                    <field name="lot_ids" widget="many2many_tags"/>
                    <field name="reason" invisible="failure_reasons != 'others'"/>
                </group>
                 <group>
                    <field name="failure_reasons"/>
                </group>
                </group>

                <footer>
                    <button string="Confirm"
                            type="object"
                            name="action_failed_coa_rolls"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
