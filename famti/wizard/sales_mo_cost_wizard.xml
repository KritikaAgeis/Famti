<odoo>
    <record id="view_manufacturing_cost_wizard_form" model="ir.ui.view">
        <field name="name">manufacturing.cost.wizard.form</field>
        <field name="model">manufacturing.cost.wizard</field>
        <field name="arch" type="xml">
            <form string="Manufacturing Cost">
                <group>
                    <group>
                        <field name="manufacturing_service_id" readonly="1"/>
                        <field name="product_id"/>
                        <field name="unit_cost"/>
                    </group>
                    <group>
                        <field name="reference"/>
                        <field name="quantity"/>
                        <field name="total_cost"/>
                    </group>
                    
                </group>
                <footer>
                    <button string="Update"
                    name="action_confirm"
                    type="object"
                    class="btn-primary"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>