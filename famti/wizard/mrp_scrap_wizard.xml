<odoo>
    <record id="view_mrp_production_scrap_wizard" model="ir.ui.view">
        <field name="name">mrp.production.scrap.wizard.form</field>
        <field name="model">mrp.production.scrap.wizard</field>
        <field name="arch" type="xml">
            <form string="Scrap Before Production">
                <group>
                    <group>
                        <field name="production_id"/>
                        <field name="product_id"/>
                        <field name="scrap_reason_tag_ids" widget="many2many_tags"/>

                    </group>
                    <group>
                        <field name="scrap_location_id"/>
                        <field name="date"/>
                        <field name="company_id"/>
                    </group>
                </group>

                <field name="line_ids">
                    <list editable="bottom">
                        <field name="serial_number"/>
                        <field name="available_qty"/>
                        <field name="scrap_qty"/>
                        <field name="uom_id"/>
                    </list>
                </field>

                <footer>
                    <button string="Confirm Scrap"
                            type="object"
                            name="action_confirm_scrap"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>